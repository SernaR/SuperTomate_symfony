{% extends 'app/appTemplates/pageTemplate.html.twig' %}

{% block title %}Login{% endblock %}

{% block page %}
    <div class="card px-4 mb-3">
        {% include 'app/components/jumbotron.html.twig' with {'title': 'Connexion' } %}
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <div class="row">
                    <label for="username" class="col-sm-4">Adresse email</label>
                    <div class="col-sm-8">
                        <input require name="_username" type="text" class="form-control" id="username" value="sblack@gmail.fr">
                    </div>    
                </div>    
            </div>
            <div class="form-group">
                    <div class="row">
                    <label for="password" class="col-sm-4">Mot de passe</label>
                    <div class="col-sm-8">
                         <input require name="_password" type="password" class="form-control" id="password" value="mot2passe">
                    </div>
                </div>
            </div>
            <div class="row justify-content-end mr-1 mb-3">
                <button type="submit" class="btn btn-primary">Je me connecte</button>
            </div>
        </form> 
    </div>      
{% endblock %}
