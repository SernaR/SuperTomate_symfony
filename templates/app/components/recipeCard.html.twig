<div class={{ col }}>
    <div class="card mb-4 text-center card-2">
        <h3 class="card-header">{{ recipe.name }}</h3>
        <a href={{ path('app_recipe', { 'category': recipe.category.name, 'slug': recipe.slug, 'recipe': recipe.id }) }}><img src={{ asset(recipe.picture) }} class="img-fluid" alt={{ recipe.name }}></a>
        <div class="card-body">
            {% for tag in recipe.tags %}
                <p class="card-text"><span class="badge badge-secondary ml-1">{{ tag.name }}</span></p>
            {% endfor %}    
            <a class="btn btn-outline-primary btn-sm" href={{ path('app_recipe', { 'category': recipe.category.name, 'slug': recipe.slug, 'recipe': recipe.id }) }}>Visualiser</a>
        </div>
    </div>
</div>